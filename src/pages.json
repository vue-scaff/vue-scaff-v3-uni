{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^m-(.*)": "@/components/$1/index.vue",
      "^u-(.*)": "vk-uview-ui/components/u-$1/u-$1.vue"
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "Vue Scaff Uni",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#f5f5f5"
  },
  "tabBar": {
    "color": "#a4a4a4",
    "selectedColor": "#ec2c34",
    "borderStyle": "white",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/start/index",
        "iconPath": "assets/icon-home.png",
        "selectedIconPath": "assets/icon-home-active.png",
        "text": "START"
      },
      {
        "pagePath": "pages/link/index",
        "iconPath": "assets/icon-link.png",
        "selectedIconPath": "assets/icon-link-active.png",
        "text": "LINK"
      }
    ]
  },
  "pages": [
    {
      "path": "pages/start/index",
      "style": {
        "navigationBarTitleText": "START",
        "enablePullDownRefresh": true,
        "onReachBottomDistance": 60
      }
    },
    {
      "path": "pages/link/index",
      "style": {
        "navigationBarTitleText": "LINK",
        "enablePullDownRefresh": true,
        "onReachBottomDistance": 60
      }
    }
  ],

  "subpackages": [
    // Webview
    {
      "root": "pages/subpackages",
      "pages": [
        {
          "path": "index",
          "style": {
            "navigationBarTitleText": ""
          }
        }
      ]
    }
  ]
}
