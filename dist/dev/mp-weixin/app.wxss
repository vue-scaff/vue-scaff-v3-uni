@font-face {
  font-family: 'heaver';
  src: url('//oss.joenix.com/vue-scaff/boldhead.woff') format('woff');
}
:root {
  overflow: hidden;
  font-size: 62.5%;
}
html,
body {
  overscroll-behavior-x: none;
}
html:after {
  content: 'Author by Joneix';
  color: white;
  text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.125);
  position: absolute;
  right: 0;
  bottom: 0;
}

.sample h1 {
  color: blue;
}


.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.logo {
  height: 200rpx;
  width: 200rpx;
  margin-top: 200rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 50rpx;
}
.text-area {
  display: flex;
  justify-content: center;
}
.title {
  font-size: 36rpx;
  color: #8f8f94;
}
